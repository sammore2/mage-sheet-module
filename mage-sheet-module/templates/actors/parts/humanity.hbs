{{!-- Este template replica o contador de 10 pontos de Humanidade (agora Essência) --}}
<div class="humanity">
    <div class="resource-content">
        {{!-- Rótulo da Essência/Avatar (Novo) --}}
        <label class="resource-label humanity-label">{{localize "WOD5E.Mage.Essence"}}</label>
        
        {{!-- O CONTADOR DE 10 PONTOS (Mantido) --}}
        <div class="resource-counter editable" data-states="/:stains,-:value" data-value="{{humanity.value}}" data-stains="{{humanity.stains}}" data-name="system.humanity">
            {{#numLoop 10}}
            <span class="resource-counter-step" data-action="squareCounterChange" data-index="{{this}}" data-state=""></span>
            {{/numLoop}}
        </div>
        
        {{!-- Rótulo das Manchas / Proximidade do Silêncio (Novo) --}}
        <label class="resource-label stains-label">{{localize "WOD5E.Mage.SilenceStains"}}</label>
    </div>
</div>