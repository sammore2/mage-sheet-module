    {{> "systems/vtm5e/display/shared/actors/parts/experience.hbs"}}
    {{> "systems/vtm5e/display/shared/actors/parts/notepad.hbs"}}
    {{> "systems/vtm5e/display/shared/actors/parts/actor-settings.hbs"}}

    {{!-- NOSSA NOVA ABA: Esferas --}}
